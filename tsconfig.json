{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"module": "ESNext",
		"newLine": "lf",
		"outDir": "dist/",
		"target": "ES2017",
		"lib": ["es2020", "DOM", "DOM.Iterable"],
		"declaration": false,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"strict": true,
		"moduleResolution": "Node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
